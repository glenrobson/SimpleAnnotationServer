<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
  version="3.1">
    <context-param>
        <param-name>primefaces.THEME</param-name>
        <param-value>bootstrap</param-value>
    </context-param>
    <welcome-file-list>  
        <welcome-file>index.xhtml</welcome-file>  
    </welcome-file-list>    

    <display-name>Simple Annotation Server</display-name>
    <filter>
        <filter-name>AuthFilter</filter-name>
        <filter-class>uk.org.llgc.annotation.store.filters.OAuthFilter</filter-class>
        <!-- Uncomment this if you would like to have a custom login page which isn't login.xhtml
            <init-param>
			<param-name>LOGIN_PAGE</param-name>
			<param-value>https://catalog.metascripta.org/</param-value>
		</init-param>-->
    </filter>
    <filter>
        <filter-name>AdminFilter</filter-name>
        <filter-class>uk.org.llgc.annotation.store.filters.AdminFilter</filter-class>
        <!-- Uncomment this if you would like to have a custom login page which isn't login.xhtml
            <init-param>
			<param-name>LOGIN_PAGE</param-name>
			<param-value>https://catalog.metascripta.org/</param-value>
		</init-param>-->
    </filter>

    <filter-mapping>
        <filter-name>AuthFilter</filter-name>
        <url-pattern>/local.html</url-pattern>
        <url-pattern>/auth.xhtml</url-pattern>
        <url-pattern>/profile.xhtml</url-pattern>
        <url-pattern>/user/*</url-pattern>
        <url-pattern>/annotation/*</url-pattern> <!-- This covers search, add, update and delete annotations -->
        <url-pattern>/collection/*</url-pattern>
        <url-pattern>/stats/*</url-pattern>
        <url-pattern>/collections.xhtml</url-pattern>
        <url-pattern>/manifest.xhtml</url-pattern>
        <url-pattern>/view.xhtml</url-pattern>
        <url-pattern>/populate.xhtml</url-pattern>
        <url-pattern>/annotations.xhtml</url-pattern>
        <url-pattern>/link.xhtml</url-pattern>
        <url-pattern>/search.xhtml</url-pattern>
        <url-pattern>/export.xhtml</url-pattern>
    </filter-mapping>
     <filter-mapping>
        <filter-name>AdminFilter</filter-name>
        <url-pattern>/admin/*</url-pattern>
    </filter-mapping>

    <filter>
        <filter-name>CorsFilter</filter-name>
        <filter-class>uk.org.llgc.annotation.store.filters.CorsFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>CorsFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
    <!-- Define the JSF servlet (manages the request processing life cycle 
    for JavaServer Faces) -->
    <servlet>
        <servlet-name>faces-servlet</servlet-name>
        <servlet-class>javax.faces.webapp.FacesServlet</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>

    <!-- Map following files to the JSF servlet -->
    <servlet-mapping>
        <servlet-name>faces-servlet</servlet-name>
        <url-pattern>*.xhtml</url-pattern>
        </servlet-mapping>
   
	<servlet>
		<servlet-name>InitServer</servlet-name>
		<servlet-class>uk.org.llgc.annotation.store.StoreConfig</servlet-class>
	    <init-param>
	        <param-name>config_file</param-name>
	        <param-value>sas.properties</param-value>
	        <description>Name of the config file to use.</description>
	    </init-param>
        <init-param>
	        <param-name>relative</param-name>
	        <param-value>true</param-value>
	        <description>If above file is relative to /WEB-INF/ or is absolute.</description>
	    </init-param>
	    <load-on-startup>1</load-on-startup> <!-- this needs to be the first one to start -->
	</servlet>
    <servlet>
        <servlet-name>CanvasAnnotations</servlet-name>
        <servlet-class>uk.org.llgc.annotation.store.servlets.oa.CanvasAnnotations</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Create</servlet-name>
        <servlet-class>uk.org.llgc.annotation.store.servlets.oa.Create</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Update</servlet-name>
        <servlet-class>uk.org.llgc.annotation.store.servlets.oa.Update</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Delete</servlet-name>
        <servlet-class>uk.org.llgc.annotation.store.servlets.oa.Delete</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Populate</servlet-name>
        <servlet-class>uk.org.llgc.annotation.store.Populate</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ListAllAnnos</servlet-name>
        <servlet-class>uk.org.llgc.annotation.store.ListAnnotations</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UploadManifest</servlet-name>
        <servlet-class>uk.org.llgc.annotation.store.servlets.ManifestUpload</servlet-class>
        <init-param>
            <param-name>manifest_dir</param-name>
            <param-value>/manifests</param-value>
        </init-param>
    </servlet>
    <servlet>
        <servlet-name>IIIFSearchAPI</servlet-name>
        <servlet-class>uk.org.llgc.annotation.store.IIIFSearchAPI</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AnnotationList</servlet-name>
        <servlet-class>uk.org.llgc.annotation.store.servlets.AnnotationListServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LoginCallback</servlet-name>
        <servlet-class>uk.org.llgc.annotation.store.servlets.login.LoginCallback</servlet-class>
    </servlet>
     <servlet>
        <servlet-name>Login</servlet-name>
        <servlet-class>uk.org.llgc.annotation.store.servlets.login.OAuth</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Logout</servlet-name>
        <servlet-class>uk.org.llgc.annotation.store.servlets.login.Logout</servlet-class>
        <init-param>
            <param-name>post_logout_url</param-name>
            <param-value>/index.xhtml</param-value>
        </init-param>
    </servlet>
    <servlet>
        <servlet-name>User</servlet-name>
        <servlet-class>uk.org.llgc.annotation.store.servlets.UserServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Collections</servlet-name>
        <servlet-class>uk.org.llgc.annotation.store.servlets.CollectionServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Collections</servlet-name>
        <url-pattern>/collection/*</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>User</servlet-name>
        <url-pattern>/user/*</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>Logout</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Login</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>LoginCallback</servlet-name>
        <url-pattern>/login-callback</url-pattern>
    </servlet-mapping>


    <servlet-mapping>
        <servlet-name>IIIFSearchAPI</servlet-name>
        <url-pattern>/search-api/*</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UploadManifest</servlet-name>
        <url-pattern>/manifests</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UploadManifest</servlet-name>
        <url-pattern>/manifests/*</url-pattern>
    </servlet-mapping>

    <!-- Annotations -->
    <servlet-mapping>
        <servlet-name>AnnotationList</servlet-name>
        <url-pattern>/annotation/list/*</url-pattern>
        <url-pattern>/annotations/*</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CanvasAnnotations</servlet-name>
        <url-pattern>/annotation/search</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Create</servlet-name>
        <url-pattern>/annotation/create</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Update</servlet-name>
        <url-pattern>/annotation/update/*</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Delete</servlet-name>
        <url-pattern>/annotation/destroy/*</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Populate</servlet-name>
        <url-pattern>/annotation/populate</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ListAllAnnos</servlet-name>
        <url-pattern>/annotation/</url-pattern>
    </servlet-mapping>
    <mime-mapping>
        <extension>json</extension>
        <mime-type>application/json</mime-type>
    </mime-mapping>
</web-app>
